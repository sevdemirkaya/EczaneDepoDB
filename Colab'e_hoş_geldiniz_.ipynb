      "source": [
        "import json\n",
        "import os\n",
        "\n",
        "DOSYA_ADI = \"gorevler.json\"\n",
        "gorevler = []\n",
        "\n",
        "def gorevleri_yukle():\n",
        "    global gorevler\n",
        "    if os.path.exists(DOSYA_ADI):\n",
        "        try:\n",
        "            with open(DOSYA_ADI, \"r\", encoding=\"utf-8\") as dosya:\n",
        "                gorevler = json.load(dosya)\n",
        "            print(\"Görevler başarıyla yüklendi.\")\n",
        "        except Exception as e:\n",
        "            print(\"Görev dosyası okunamadı. Yeni bir liste oluşturuldu.\")\n",
        "    else:\n",
        "        print(\"Görev dosyası bulunamadı. Yeni bir liste oluşturuldu.\")\n",
        "\n",
        "def gorevleri_kaydet():\n",
        "    try:\n",
        "        with open(DOSYA_ADI, \"w\", encoding=\"utf-8\") as dosya:\n",
        "            json.dump(gorevler, dosya, ensure_ascii=False, indent=4)\n",
        "        print(\"Görevler başarıyla kaydedildi.\")\n",
        "    except Exception as e:\n",
        "        print(\"Görevler kaydedilemedi:\", str(e))\n",
        "\n",
        "def gorev_ekle():\n",
        "    task = input(\"Yeni görev: \").strip()\n",
        "    if not task:\n",
        "        print(\"Boş görev eklenemez!\")\n",
        "        return\n",
        "    date = input(\"Son tarih (örn: 2025-06-30): \").strip()\n",
        "    gorevler.append({\"task\": task, \"date\": date, \"done\": False})\n",
        "    print(f\"'{task}' görevi eklendi.\")\n",
        "    gorevleri_kaydet()\n",
        "\n",
        "def gorevleri_listele():\n",
        "    if not gorevler:\n",
        "        print(\"Henüz görev bulunmamaktadır.\")\n",
        "    else:\n",
        "        print(\"\\n--- GÖREV LİSTESİ ---\")\n",
        "        for i, gorev in enumerate(gorevler, start=1):\n",
        "            durum = \"✅\" if gorev[\"done\"] else \"❌\"\n",
        "            print(f\"{i}. {gorev['task']} (Tarih: {gorev['date']}) - {durum}\")\n",
        "        print(\"--------------------\")\n",
        "\n",
        "def gorev_duzenle():\n",
        "    gorevleri_listele()\n",
        "    try:\n",
        "        index = int(input(\"Düzenlemek istediğiniz görevin numarası: \")) - 1\n",
        "        if 0 <= index < len(gorevler):\n",
        "            yeni_gorev = input(f\"Yeni görev metni ({gorevler[index]['task']}): \").strip()\n",
        "            if not yeni_gorev:\n",
        "                print(\"Boş görev metni girilemez.\")\n",
        "                return\n",
        "            gorevler[index][\"task\"] = yeni_gorev\n",
        "            print(\"Görev başarıyla güncellendi.\")\n",
        "            gorevleri_kaydet()\n",
        "        else:\n",
        "            print(\"Geçersiz görev numarası!\")\n",
        "    except ValueError:\n",
        "        print(\"Lütfen bir sayı girin!\")\n",
        "\n",
        "def gorev_sil():\n",
        "    gorevleri_listele()\n",
        "    try:\n",
        "        index = int(input(\"Silmek istediğiniz görevin numarası: \")) - 1\n",
        "        if 0 <= index < len(gorevler):\n",
        "            silinen = gorevler.pop(index)\n",
        "            print(f\"'{silinen['task']}' görevi silindi.\")\n",
        "            gorevleri_kaydet()\n",
        "        else:\n",
        "            print(\"Geçersiz görev numarası!\")\n",
        "    except ValueError:\n",
        "        print(\"Lütfen bir sayı girin!\")\n",
        "\n",
        "def menu_goster():\n",
        "    print(\"\\n--- TO-DO LIST UYGULAMASI ---\")\n",
        "    print(\"1. Görevleri Listele\")\n",
        "    print(\"2. Yeni Görev Ekle\")\n",
        "    print(\"3. Görev Düzenle\")\n",
        "    print(\"4. Görev Sil\")\n",
        "    print(\"5. Çıkış\")\n",
        "\n",
        "def main():\n",
        "    gorevleri_yukle()\n",
        "    while True:\n",
        "        menu_goster()\n",
        "        secim = input(\"Seçiminiz (1-5): \").strip()\n",
        "        if secim == '1':\n",
        "            gorevleri_listele()\n",
        "        elif secim == '2':\n",
        "            gorev_ekle()\n",
        "        elif secim == '3':\n",
        "            gorev_duzenle()\n",
        "        elif secim == '4':\n",
        "            gorev_sil()\n",
        "        elif secim == '5':\n",
        "            print(\"Programdan çıkılıyor...\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Geçersiz seçim! Lütfen 1-5 arasında bir değer girin.\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
      ],
